generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String   // Salvaremos o hash da senha
  name      String
  role      String   @default("PATIENT") // PATIENT ou DOCTOR
  createdAt DateTime @default(now())
}

model DailyLog {
  id          String   @id @default(uuid())
  patientId   String   // ID que virá do Keycloak futuramente
  moodLevel   Int      // 1 a 5
  symptoms    String[] // Array de sintomas (Ex: ["Náusea", "Dor"])
  description String?  // Relato em texto do paciente
  
  // Campos para a futura análise de IA
  aiSentiment Float?   // -1.0 a 1.0
  aiAlertLevel String? // LOW, MEDIUM, HIGH
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}